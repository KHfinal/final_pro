<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="schedule">
	<insert id="addSchedule" parameterType="schedule">
		insert into schedule values(#{userEmail},#{title},#{startDate},#{endDate}+1,#{content},#{color})
	</insert>
	<resultMap type="map" id="eventMap">
	</resultMap>
	<select id="loadEventList" parameterType="string" resultMap="eventMap">
		select * from schedule where user_email = #{userEmail}
	</select>
	<select id="loadEvent" parameterType="schedule" resultType="schedule">
		select user_email as userEmail,title,start_date as startdate,end_date as enddate,content,color from schedule where user_email = #{userEmail} and title= #{title} and start_date = #{startDate}
	</select>
</mapper>
