<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="friend">
<resultMap type="map" id="friendMap"></resultMap>
	
	<select id="selectFriendListJson" resultMap="friendMap" parameterType="string">
		SELECT f_friendemail FROM FRIEND WHERE f_member_email =  #{email}
	</select>
	
	<select id="requestList" resultType="map" parameterType="string">
		SELECT * FROM FRIEND WHERE F_MEMBER_EMAIL=#{email} AND F_STATUS='P'
	</select>

	<insert id="friendRequest" parameterType="map">
		INSERT INTO FRIEND VALUES(#{myEmail},#{fEmail},#{p})
	</insert>
</mapper>
